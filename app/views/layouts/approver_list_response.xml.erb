<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<!DOCTYPE OPS_envelope SYSTEM 'ops.dtd'>
<OPS_envelope>
   <header>
     <version>0.9</version>
   </header>
   <body>
     <data_block>
       <dt_assoc>
         <item key='protocol'>XCP</item>
         <item key='action'>REPLY</item>
         <item key='object'>TRUST_SERVICE</item>
         <item key='response_text'>Command completed successfully.</item>
         <item key='is_success'>1</item>
         <item key='response_code'>200</item>
         <item key='attributes'>
           <dt_assoc>
             <item key='approver_list'>
               <dt_array>
                 <% @data[:approver_list].each_with_index do |item, index| %>
                    <item key='<%= index %>'>
                      <dt_assoc>
                        <item key='email'><%= item[:email] %></item>
                        <item key='domain'><%= item[:domain] %></item>
                        <item key='type'><%= item[:type] %></item>
                      </dt_assoc>
                    </item>
                 <% end %>
               </dt_array>
             </item>
           </dt_assoc>
         </item>
       </dt_assoc>
     </data_block>
   </body>
</OPS_envelope>